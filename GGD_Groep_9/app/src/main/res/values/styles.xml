<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/oceaanblauw</item>
    </style>

    <style name="settingsStyle">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/oceaanblauw</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="vragenlijstStyle">
        <item name="android:textColor">@color/grijs</item>
    </style>

    <style name="vragenlijstStyle.Title">
        <item name="android:padding">6dp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">9pt</item>
    </style>

    <style name="fire">
        <item name="android:src">@drawable/fire</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
